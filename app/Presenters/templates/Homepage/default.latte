{block content}
<div class="row">
	<div class="col-12 text-center">
		<h1>
			{_templates.header.mainTitle|noescape}
		</h1>
		<p>
			{_templates.header.mainSubtitle|noescape}
		</p>
	</div>
</div>
<div class="row">
	<div class="col-6">
		<br />
		<br />
		<br />
		<p class="text-center">
			<a class="btn btn-purple btn-lg" href="/homepage/post-demand">{_templates.header.postDemand}</a>
		</p>
	</div>
	<div class="col-6">
		<br />
		<br />
		<br />
		<p class="text-center">
			<a class="btn btn-green btn-lg"
			   href="#iWanaBeThere">Chci se zapojit</a>
		</p>
	</div>
</div>
<div class="row">
	<div class="col-12">
		<div class="notif">
			<p>{_templates.homepage.notif|noescape}</p>
		</div>
	</div>
</div>
</div>
<div class="row bg-color no-margin-sides">
	<div class="container">
		<div id="content">
			<div class="row how-it-works">
				<div class="col-12">
					<h3 class="text-center">
						{_templates.homepage.howItWork|noescape}
					</h3>

					<div class="box-w-list--wrapper">
						<ul>
							<li>
								<span class="num">1.</span>
								<h4>{_templates.homepage.register}</h4>
								<p>{_templates.homepage.registerOnPosition}</p>
							</li>
							<li>
								<span class="num num-2">2.</span>
								<h4>{_templates.homepage.connectToVolunteers}</h4>
								<p>{_templates.homepage.getAccess}</p>
							</li>
							<li>
								<span class="num num-3">3.</span>
								<h4>{_templates.homepage.coordination}</h4>
								<p>{_templates.homepage.coordinationDescription}</p>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row padding-100 ">
		<div class="col-12 text-center">
			<h3 class="text-center" id="iWanaBeThere">
				{_templates.homepage.howCanIJoin}
			</h3>

			<div class="box-w-list--wrapper">
				<ul class="flex">
					<li>
						<span><img src="{$basePath}/images/002-kind.svg"/></span>
						<h4>{_templates.coordinator.title}</h4>
						<p>stará se o hladký průběh pomoci, komunikuje s dispečerem</p>
					</li>
					<li>
						<span><img src="{$basePath}/images/003-call-center-agent.svg"/></span>
						<h4>{_templates.operator.title}</h4>
						<p>přiřazuje objednávky kurýrům a dohlíží na včasné doručení</p>
					</li>
					<li>
						<span><img src="{$basePath}/images/001-car.svg"/></span>
						<h4>{_templates.courier.title}</h4>
						<p>s autem, který nakupuje a doručuje potřebným</p>
					</li>
					<li>
						<span><img src="{$basePath}/images/004-cut.svg"/></span>
						<h4>{_templates.seamstress.title}</h4>
						<p>šije roušky a připravuje je k odběru</p>
					</li>
				</ul>
				<p class="text-center">
					<br />
					<a class="btn btn-green btn-lg"
					href="/homepage/want-to-join">Chci se zapojit</a>
				</p>
			</div>
		</div>
	</div>
</div>
